@if (ViewBag.Service != null)
{
    <h1>Modification</h1>

    <br />

    <form asp-controller="Admin" asp-action="SubmitEditFormService" method="post">
        <div>
            <input class="form-control" type="text" name="idService" hidden placeholder="id" value="@ViewBag.Service.IdService" />
        </div>
        <div class="row">
            <div class="col-12">
                <input class="form-control" type="text" name="name" placeholder="Nom" value="@ViewBag.Service.Name" />
            </div>
        </div>
        <br />
        <div class="row justify-content-center">
            <div class="col-6">
                <button type="submit" class="btn btn-primary btn-block">Enregistrer</button>
            </div>
        </div>
    </form>
}
else
{
    <h1>Ajout</h1>

    <form asp-controller="Admin" asp-action="SubmitAddFormService" method="post">
        <div class="row">
            <div class="col-12">
                <input class="form-control" type="text" name="name" placeholder="Nom du service" />
            </div>
        </div>
        <br />
        <div class="row justify-content-center">
            <div class="col-6">
                <button type="submit" class="btn btn-primary btn-block">Enregistrer</button>
            </div>
        </div>
    </form>
}

